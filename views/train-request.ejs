<% title = "Child Template" %>

<%- contentFor('mainWithoutMarge') %>
<%- contentFor('main') %>
<h2 class="my-5">Train</h2>

<form id="trainRequestForm">

    <p>
        <label for="weight">
            Poids :
        </label>
        <input class="form-control" type="number" value="64.0" step="0.1" id="weight" required/>
    </p>
    <p>
        <label for="height">
            Taille :
        </label>
        <input class="form-control" type="number" value="173" step="0.1" id="height" required/>
    </p>
    <p>
        <label for="birth_day">
            Date de naissance :
        </label>
        <input class="form-control" type="date" value="2002-07-17" id="birth_day" required/>
    </p>
    <p>
        <label for="metabolism"> Métabolisme : </label>
        <select class="form-control" id="metabolism" required>
            <option value="Très lent">Très lent</option>
            <option value="Lent">Lent</option>
            <option value="Normal"> Normal</option>
            <option value="Rapide"> Rapide</option>
            <option selected value="Très rapide"> Très rapide</option>
        </select>
    </p>

    <p>
        <label for="objectif"> Objectif : </label>
        <select class="form-control" id="objectif" required>
            <option value="Perdre du poids">Perdre du poids</option>
            <option value="Force">Force </option>
            <option selected value="Volume">Volume </option>
        </select>
    </p>
    <p>
        <label for="description"> D'autre chose à ajouter ? </label>
        <textarea class="form-control" id="description"></textarea>
    </p>
    <div class="my-4">
        <h3 class="my-2">Antécédant sportifs : </h3>
        <div class="border border-light p-3">
            <div class="row">
                <div class="col-3">
                    <label for="passed_sport_name"> Nom : </label>
                    <input requried id="passed_sport_name" value="musculation" class="form-control" type="text"/>
                </div>
                <div class="col-3">
                    <label for="start_date">Start Date:</label>
                    <input requried class="form-control" type="date" value="2020-09-01" id="start_date" name="start_date">
            
                    <label for="end_date">End Date:</label>
                    <input requried class="form-control" type="date" value="2023-09-01" id="end_date" name="end_date">
            
                </div>
                <div class="col-6">
                    <label for="sport_description">
                        Description : 
                    </label>
                    <textarea id="sport_description" class="form-control">eerter</textarea>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <span id="addSport" class="btn btn-primary">
                    Ajouter
                </span>
            </div>
        </div>
        <div id='passedSportListElements'>
    
        </div>
    </div>
    <div class="my-4">
        <h3 class="my-2">Antécédant de blessure : </h3>
        <div class="border border-light p-3">
            <div class="row">
                <div class="col-4">
                    <label for="passed_inj_name"> Type : </label>
                    <select id="passed_inj_name" class="form-control">
                        <option>Déchirure musculaire</option>
                        <option>Rupture de tendon</option>
                        <option>Tendinite</option>
                        <option>Fracture d'un OS</option>
                    </select>
                
                    <label for="injDate"> Date:</label>
                    <input requried class="form-control" type="date" value="2020-09-01" id="injDate" name="injDate">
                </div>
                <div class="col-8">
                    <label class="mt-2" for="inj_description">
                        Description : 
                    </label>
                    <textarea id="inj_description" class="form-control mb-2">eerter</textarea>
                    <label class="mt-2" for="alrd_embarrased">
                        Êtes vous encore géné par cette blessure : 
                    </label>
                    <textarea  id="alrd_embarrased" class="form-control mb-2">eerter</textarea>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <span id="addInj" class="btn btn-primary">
                    Ajouter
                </span>
            </div>
        </div>
        <div id='passedInjListElements'>

        </div>   
    </div>
    <div class="alert d-none" id="trainRequestAlert">
    </div>
    <p>
        <button class="btn btn-primary">Submit </button>
    </p>
   
</form>
<script src="/js/train_request/pssd.sport.parser.js"></script>
<script src="/js/train_request/pssd.injury.parser.js"></script>
<script src="/js/train_request/add.js"></script>