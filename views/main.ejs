<!DOCTYPE html>
<html>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
<link rel="stylesheet" href="/css/overall.css" />
<head>
    <title><%= title %></title>
</head>
<body>
  <% if(locals.message){ %>
      <% if(locals.message.success){ %>
        <div class="alert alert-success my-0" role="alert">
          <strong><%= locals.message.success %></strong> 
        </div>
      <% } %>
      <% if(locals.message.danger){ %>
        <div class="alert alert-danger my-0" role="alert">
          <strong><%= locals.message.danger %></strong>
        </div>
      <% } %>
      <% if(locals.message.warning){ %>
        <div class="alert alert-warning my-0" role="alert">
          <strong><%= locals.message.warning %></strong>
        </div>
      <% } %>
      <% if(locals.message.info){ %>
        <div class="alert alert-info my-0" role="alert">
          <strong><%= locals.message.info %></strong>
        </div>
      <% } %>
    <% } %>
    <header class="bg-dark p-1">
        <div class="container">
            <h1 class="text-light">Auto Coaching</h1>
        </div>
    </header>
    <nav class="navbar navbar-expand-lg bg-primary">
        <div class="container">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
              <% if (!user) { %>
                <a class="nav-link active" aria-current="page" href="/">Home</a>
                <div class="navbar-nav">
                  <a class="nav-link" href="/login">Login</a>
                  <a class="nav-link" href="/signup">Sign up</a>
                </div>
              <% } else { %>
                <a class="nav-link" href="/train">Entrainement</a>
                <a class="nav-link" href="/nutrition/<%= new Date() %>">Nutrition</a>
                <a class="nav-link" href="/profile">Profile</a>
                <div class="navbar-nav">
                  <a class="nav-link" href="/logout">Log out</a>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </nav>
    <main class="w-100">
        <div class="container main-container">
            <%- main %> 
        </div>
    </main>
    <footer>
        <!-- Footer content -->
    </footer>
</body>
</html>
