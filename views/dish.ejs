<%- include('_modals/_filter.modals.ejs', { parsedUrlQuery : parsedUrlQuery} ); %>
<script>
    const addFoodToDishs = document.querySelectorAll('.addFoodToDish')
    const foodDishForm = document.querySelector('.foodDishForm');
    const addedFood = document.querySelector('#addedFood');
    const foodsDish = document.querySelector('#foodsDish')
    const filterFoodModalForm = document.querySelector('#filterFoodModal').querySelector('form');
    const foodsDishInput = document.querySelector('#foodsDishInput')


    foodDishForm.addEventListener('submit', function (event) {

        event.preventDefault();

        const foodWeightElements = document.querySelectorAll('.foodWeight');
        var foodWeight = [];
        
        foodWeightElements.forEach(foodWeightElement => {
            foodWeight.push('{foodId: '+foodWeightElement.getAttribute("foodId")+', weight: '+foodWeightElement.value+'}')
        })

        foodsDish.setAttribute('value', "["+foodWeight.toString()+"]");

        data = new FormData(this)
        if (isRightExt(data.get('image').name, ['.jpeg', '.jpg', '.png', '.gif']) && data.get('image').size <= 5*1024*1024) {
            this.submit(data);
        } else {
            alert('Vous ne pouvez publier un fichier que de 5 Mo maximum et d\'extension : jpeg, jpg, png ou gif.')
        }
        
    })

    function initDelete() {

        const deleteFoodButtons = document.querySelectorAll('.deleteFoodButton');
        deleteFoodButtons.forEach(deleteFoodButton => {
            deleteFoodButton.removeEventListener('click', wrapDeletionAliment)
            deleteFoodButton.addEventListener('click', wrapDeletionAliment);
        });
    }

    function deletionAliment (event) {

        event.preventDefault();
        this.parentElement.parentElement.remove();
        
    }

    function wrapDeletionAliment() {

        deletionAliment.call(this, event)

    }

    initDelete();
    

    addFoodToDishs.forEach(addFoodToDish => {

        addFoodToDish.addEventListener("click", function (event) {

            event.preventDefault();

            const id = addFoodToDish.getAttribute('idFood')
            const body = {
                method: 'GET',
                headers: {'Content-Type': 'application/json'}
            }
            
            fetch('/api/food/'+id, body)
            .then(response => response.json())
            .then(data => {
                if (data.data !== undefined) {
                    const tr = document.createElement('tr',{ class : 'foodDishRow'})
                    tr.innerHTML = '<th scope="row">'+data.data.name+'</th><td><input type="number" foodId='+data.data.id+' class="form-control foodWeight" placeholder="g / ml"/></td><td><button class="btn btn-outline-danger deleteFoodButton"><i class="fa-regular fa-trash-can"></i> Supprimer</button></td>';
                    
                    addedFood.appendChild(tr)
                    initDelete()

                }
            });

        });
        
    });

    foodDishForm

    function isRightExt(fileName, extArray) {

        
        let result = false;

        for (let i=0; i < extArray.length; i++){
            console.log(result)
            if(fileName.endsWith(extArray[i])) result = true;
        
        }

        console.log(result)
        return result
    }

    filterFoodModalForm.addEventListener('submit', function(e){

        e.preventDefault();
        const rowsDishFood = document.querySelector('#addedFood').querySelectorAll('tr')
        arrayFoodDish = ''

        rowsDishFood.forEach(rowDishFood => {
            foodWeight = rowDishFood.querySelector('.foodWeight')
            arrayFoodDish += foodWeight.getAttribute('foodId') +'='+ foodWeight.value+','
        })
        arrayFoodDish = (arrayFoodDish+'}')

        arrayFoodDish = arrayFoodDish.replace(',}', '');
        foodsDishInput.value = arrayFoodDish;

        console.log(arrayFoodDish);

        data = new FormData(this)
        this.submit(data);

    });

</script>