<% title = "Child Template" %>

<%- contentFor('main') %>
<h3 class="my-5 ">Aliments 
    <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addFoodModal">
    <i class="fa-solid fa-plus"></i>
