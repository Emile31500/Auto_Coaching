<div class="modal fade" id="addFoodModal" tabindex="-1" aria-labelledby="addFoodModalLabel" aria-modal="true" role="dialog">
  <div class="modal-dialog modal-xl-down">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-4" id="addFoodModalLabel">Ajouter un nouvel aliment</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form method="POST">
          <div class="my-2">
            <label class="my-1">Nom : </label>
            <input type="text" class="form-control" name="name" />
          </div> 
          <div class="my-2">
            <label class="my-1">Kcalorie : </label>
            <input type="number" step="0.1" class="form-control" name="kcalorie" />
          </div> 
          <div class="my-2">
            <label class="my-1">Protéine : </label>
            <input type="number" step="0.1" class="form-control" name="proteine" />
          </div> 
          <div class="my-2">
            <label class="my-1">Glucide, dont sucre : </label>
            <div class="input-group ">
              <input type="number" step="0.1" class="form-control" name="carbohydrate" />
              <input type="number" step="0.1" class="form-control" name="sugar" />
            </div>
          </div> 
          <div class="my-2">
            <label class="my-1">Lipide, dont saturé : </label> 
            <div class="input-group ">
              <input type="number" step="0.1" class="form-control" name="fat" />
              <input type="number" step="0.1" class="form-control" name="trans_fat" />
            </div>
          </div> 
          <div>
            <input type="submit" class="btn btn-outline-primary"/>
          </div>
        </form>
      </div>  
    </div>
  </div>
</div>