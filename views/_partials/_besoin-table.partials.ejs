<div class="my-5 my-md-5-down mb-5">
  <!-- <h3 >Besoins</h3> -->
  <table class="table table-bordered" >
    <thead>
      <tr>
        <th colspan="3">
          Total calorique et nutritionel : <a href="/food/ate/<%= date.getFullYear()+"-"+(date.getMonth()+1)+"-"+date.getDate() %> 00:00:00"><%= date.toLocaleDateString('fr-FR', {
            weekday: 'long',
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })  %></a>
        </th>
      </tr>
      <tr>
        <th>Energie</th>
        <th>Prot√©ine</th>
        <th>Lipide</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td> <%= nutritionRequirement.kcalorie * nutritionRequirement.personnalMultiplicator | 1 %> Kcl </td>
        <td> <%= nutritionRequirement.proteine * nutritionRequirement.proteinMultiplicator | 1 %> G </td>
        <td> <%= nutritionRequirement.fat * nutritionRequirement.fatMultiplicator | 1 %> G </td>
      </tr>
      <tr>
        <td> <span id="kcalAteAbs"></span> <%= Math.round(sumKcalorie) %> Kcl </td>
        <td> <span id="protAteAbs"></span> <%= Math.round(sumProtein) %> G </td>
        <td> <span id="fatAteAbs"></span> <%= Math.round(sumFat) %> G </td>
      </tr>
      <tr>
        <td> <span id="kcalAtePrct"></span> <%= Math.round(sumKcalorie / nutritionRequirement.kcalorie * 100) %> % </td>
        <td> <span id="protAtePrct"></span> <%= Math.round(sumProtein / nutritionRequirement.proteine * 100) %> % </td>
        <td> <span id="fatAtePrct"></span> <%= Math.round(sumFat / nutritionRequirement.fat * 100) %> % </td>
      </tr>
      <tr>
        <td colspan="3" class="p-2" style="max-height: 130px;">
          <div  class="row  w-100" style="white-space: nowrap; overflow-y: auto; max-height: 130px;">
            <% for (aFIndx = 0; aFIndx < ateFood.length; aFIndx++) { %>
              <div class="shadow-sm border w-auto p-2 mx-2 rounded">
                <%= new Date(ateFood[aFIndx].date).toLocaleDateString('fr-FR', {
                  weekday: 'long',
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })%>
                <br>
                <br>
                <a href="/nutrition/<%= ateFood[aFIndx].date %>">voir</a>
              </div>
            <% } %>
            <div class="shadow-sm border  w-auto p-2 mx-2 rounded">
                 <%= new Date().toLocaleDateString('fr-FR', {
                  weekday: 'long',
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })%>
                <br>
                <span class="text-secondary fst-italic">(aujourd'hui)</span>
                <br>
                <a href="/nutrition/<%= new Intl.DateTimeFormat('en-CA').format(new Date()) %>">voir</a>
              </div>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
  <!-- <div class="navbar navbar-inverse navbar-fixed-top"> -->

</div>